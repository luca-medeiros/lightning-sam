{
    "num_devices": 4,
    "batch_size": 12,
    "num_workers": 4,
    "num_epochs": 20,
    "eval_interval": 2,
    "out_dir": "out/training",
    "opt": {
        "learning_rate": 8e-4,
        "weight_decay": 1e-4,
        "decay_factor": 10,
        "steps": [60000, 86666],
        "warmup_steps": 250
    },
    "model": {
        "type": "vit_h",
        "checkpoint": "sam_vit_h_4b8939.pth",
        "freeze": {
            "image_encoder": true,
            "prompt_encoder": true,
            "mask_decoder": false
        }
    },
    "dataset": {
        "train": {
            "root_dir": "/coco/coco2017/train2017",
            "annotation_file": "/coco/coco2017/annotations/instances_train2017.json"
        },
        "val": {
            "root_dir": "/coco/coco2017/val2017",
            "annotation_file": "/coco/coco2017/annotations/instances_val2017.json"
        }
    }
}
